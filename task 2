import random

def get_winner(user, comp):
    if user == comp:
        return "Tie"
    elif (user == "rock" and comp == "scissors") or \
         (user == "paper" and comp == "rock") or \
         (user == "scissors" and comp == "paper"):
        return "User"
    else:
        return "Computer"

options = ["rock", "paper", "scissors"]
user_score = 0
comp_score = 0

print("Rock, Paper, Scissors - Best of 5 Rounds!")

for round_num in range(1, 6):
    print(f"\nRound {round_num}")
    user_choice = input("Enter rock, paper, or scissors: ").lower()
    if user_choice not in options:
        print("Invalid input. Try again.")
        continue
    comp_choice = random.choice(options)
    print(f"Computer chose: {comp_choice}")
    winner = get_winner(user_choice, comp_choice)
    
    if winner == "User":
        print("You win this round!")
        user_score += 1
    elif winner == "Computer":
        print("Computer wins this round!")
        comp_score += 1
    else:
        print("This round is a tie!")

# Final results
print("\nFinal Score:")
print(f"You: {user_score} | Computer: {comp_score}")
if user_score > comp_score:
    print("ğŸ‰ You win the game!")
elif comp_score > user_score:
    print("ğŸ’» Computer wins the game!")
else:
    print("ğŸ¤ It's a tie overall!")
